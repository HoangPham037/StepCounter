<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StepCount" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/bg_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#5CD2C6</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!--Light mode -->
    <!--Screen background if light mode on -->
    <style name="SCREEN">
        <item name="android:background">#F6F5F6</item>
    </style>

    <!--Block background if light mode on -->
    <style name="BLOCK">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="BGR_HEADER">
        <item name="android:background">@color/bgr_app_light_mode</item>
    </style>

    <style name="BLOCK_HISTORY">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TEXT_STEP">
        <item name="android:textColor">@color/color_text_title</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Text header background if light mode on -->
    <style name="TEXT_HEADER">
        <item name="android:textColor">@color/color_text_title</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Text header setting background if light mode on -->
    <style name="TEXT_HEADER_SETTING">
        <item name="android:textColor">#363753</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--Text title background if light mode on -->
    <style name="TEXT_TITLE">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#363753</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TEXT_DESCRIBE">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="PROGRESSBAR">
        <item name="cpb_background_progressbar_color">@color/bg_gray</item>
        <item name="cpb_background_progressbar_width">15dp</item>
        <item name="cpb_progressbar_color">@color/bg_blue</item>
        <item name="cpb_progressbar_width">14dp</item>
        <item name="cpb_round_border">true</item>
    </style>

    <!--Text cover background if light mode on -->
    <style name="TEXT_COVER">
        <item name="android:textColor">#363753</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <!-- Button background if light mode on -->
    <style name="BUTTON">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_10dp</item>
    </style>

    <!-- BUTTON_NAVIGATION background if light mode on -->
    <style name="BUTTON_NAVIGATION">
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@color/white</item>
    </style>

    <!-- BUTTON_POPUP_SHOW background if light mode on -->
    <style name="BUTTON_POPUP_SHOW">
        <item name="android:background">@drawable/border_select_more</item>
        <item name="android:src">@drawable/add_circle_24_blue</item>
    </style>

    <!-- BUTTON_POPUP_HIDE background if light mode on -->
    <style name="BUTTON_POPUP_HIDE">
        <item name="android:background">@drawable/border_select_more</item>
        <item name="android:src">@drawable/cancel_24_green</item>
    </style>

    <!-- BUTTON_POPUP_HIDE background if light mode on -->
    <style name="BARCHART_REPORT">
        <item name="chart_axis">x</item>
        <item name="chart_barsRadius">4dp</item>
        <item name="chart_barsColor">@color/bg_green</item>
        <item name="chart_labelsColor">#363753</item>
        <item name="chart_labelsSize">@dimen/text_size_version</item>
        <item name="chart_spacing">15dp</item>
    </style>

    <style name="CustomVerticalProgress" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:progressDrawable">@drawable/custom_progress_light</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <style name="Custom_view_level">
        <item name="android:background">@drawable/custom_view_level</item>
    </style>

    <style name="CustomText" parent="Widget.MaterialComponents.TextView">\
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#043744</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomSuccessProgress" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="trackCornerRadius">20dp</item>
        <item name="indicatorColor">#2196F3</item>
        <item name="android:rotation">-180</item>
        <item name="indicatorSize">30dp</item>
        <item name="trackThickness">3dp</item>
        <item name="trackColor">#BBEEFA</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">

        <item name="android:backgroundTint">#F0F4F5</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/ic_male_30</item>
    </style>
</resources>