<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:background="@drawable/border_popup"
    android:elevation="50dp"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnOff"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/border_select_more"
            android:src="@drawable/baseline_remove_circle_24" />

        <TextView
            android:id="@+id/tvOff"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnRun"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_play_circle_24" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/btnPause"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/border_select_more"
            android:src="@drawable/baseline_pause_circle_24" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnRun"
            android:id="@+id/tvRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_over"
            android:visibility="gone"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnPause"
            android:id="@+id/tvPause"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnReset"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/border_select_more"
            android:src="@drawable/baseline_replay_circle_filled_24" />

        <TextView
            android:id="@+id/tvReset"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnPractice"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/border_select_more"
            android:src="@drawable/baseline_offline_bolt_24" />

        <TextView
            android:id="@+id/tvPractice"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRACTICE" />
    </LinearLayout>

</LinearLayout>